doctype html
html
  head
    meta(charset='utf-8')

    block title

    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')

    link(rel='icon', type='image/png', href='/modules/favicon/favicon1.png')

    link(rel='stylesheet', href='/modules/bower/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/modules/bower/bootstrap/dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/modules/css/base.css')

    script(src='/modules/bower/json2/json2.js')
    script(src='/modules/bower/jquery/dist/jquery.min.js')
    script(src='/modules/bower/bootstrap/dist/js/bootstrap.min.js')

    script(src='/modules/js/base.js')
    script(src='/modules/js/ui.js')
    script(src='/modules/js/session.js')
    script(src='/modules/js/post.js')

  body
    .container
      .navbar
        if locals.user
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/threads') #{appName}
          .nav-collapse.collapse.navbar-responsive-collapse
            form(action='/search').navbar-form.pull-right.hidden-sm
              input(type='text', name='q', style='width:200px', placeholder='Search')
              button.new-btn.btn.btn-primary(type='button') New Post
              button.logout-btn.btn.btn-default(type='button') Logout
            form(action='/search').navbar-form.pull-right.visible-sm
              input(type='text', name='q', style='width:180px', placeholder='Search')
              button.new-btn.btn.btn-primary(type='button')
                span.glyphicon.glyphicon-pencil
              button.logout-btn.btn.btn-default(type='button')
                span.glyphicon.glyphicon-off

        else
          a.navbar-brand(href='/') #{appName}

      block content

      if locals.user
        .footer
          .side-space
            ul.list-inline
              li: a(href='/threads') all
              for c in user.categories
                li: a(href='/threads?c=' + c.id) #{c.name}

    #error-modal.modal
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
            h4.modal-title
          .modal-body
          .modal-footer
            button.btn.btn-default(data-dismiss='modal') Close
