extends layout

block title
	title #{siteTitle}

block content
	script
		init.add(function () {
			session.initLogin();
		});

	.container
		.content
			.page-header
				h2 Login

			form#login-form
				.form-row
					label.control-label Password
					input.col-lg-3.input-with-feedback(name='password', type='password')
				.checkbox
					label Remember
					input(name='remember', type='checkbox')
				.form-action
					button.btn.btn-primary(name='send') Login
