	body
		// navbar
		.navbar.navbar-static-top
			.container
				if user
					a.navbar-brand(href='/threads') #{siteTitle}
					.pull-right
						button#new-btn.btn.btn-primary.navbar-btn New Post
						button#logout-btn.btn.btn-default.navbar-btn Logout
					form.navbar-form.pull-right(style='margin-right: 5px')
						input(type='text', style='width:180px', placeholder='Search', disabled)

				else
					a.navbar-brand(href='/') #{siteTitle}


		block content

		if user
			#categories.container
				hr
				ul.list-inline(style='margin: 5px')
					li: a(href='/threads') all
					for c in user.categoriesOrdered
						li: a(href='/threads?c=' + c.id) #{c.name}

		#error-modal.modal
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
						h4.modal-title Modal title
					.modal-body
					.modal-footer
						a.btn.btn-primary(data-dismiss='modal') Close

		#input-file-templ.hide
			.file
				input.hide(type='file', name='file', multiple='multiple')
				.input-group
					input(type='text', disabled)
					span.input-group-btn
						button.btn.btn-default File
