html
	head
		meta(charset='utf-8')

		block title

		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='')
		meta(name='author', content='')

		link(rel='shortcut icon', href='/image/favicon1.ico', type='image/x-icon')

		link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/base.css')

		script(src='/lib/json2.js')
		script(src='/lib/jquery-1.9.1.min.js')
		script(src='/lib/jquery.form.js')
		script(src='/lib/bootstrap/js/bootstrap.min.js')
		script(src='/lib/superagent.js')
		script(src='/lib/spin.min.js')

		script(src='/js/base.js')
		script(src='/js/ui.js')
		script(src='/js/session.js')
		script(src='/js/post.js')

	body
		// navbar
		.container
			.navbar
				if user
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/threads') #{siteTitle}
					.nav-collapse.collapse.navbar-responsive-collapse
						form(action='/search').navbar-form.pull-right.hidden-sm
							input(type='text', name='q', style='width:200px', placeholder='Search')
							button.new-btn.btn.btn-primary(type='button') New Post
							button.logout-btn.btn.btn-default(type='button') Logout
						form(action='/search').navbar-form.pull-right.visible-sm
							input(type='text', name='q', style='width:180px', placeholder='Search')
							button.new-btn.btn.btn-primary(type='button')
								span.glyphicon.glyphicon-pencil
							button.logout-btn.btn.btn-default(type='button')
								span.glyphicon.glyphicon-off

				else
					a.navbar-brand(href='/') #{siteTitle}

		block content

		if user
			#categories.container
				hr
				.content
					ul.list-inline(style='margin: 5px')
						li: a(href='/threads') all
						for c in user.categoriesOrdered
							li: a(href='/threads?c=' + c.id) #{c.name}

		#error-modal.modal
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
						h4.modal-title Modal title
					.modal-body
					.modal-footer
						a.btn.btn-primary(data-dismiss='modal') Close

		#input-file-templ.hide
			.file
				input.hide(type='file', name='file', multiple='multiple')
				.input-group
					input(type='text', disabled)
					span.input-group-btn
						button.btn.btn-default File
