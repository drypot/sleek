extends layout

block title
	title #{category.name} - #{siteTitle}

block content

	script
		init.add(function () {
			post.initThreadList();
		});

	.container
		.col-lg-12
			.page-header
				h2 #{category.name}

			table#threads.threads.table.table-hover.hidden-phone
				tbody
					for thread in threads
						tr
							td.t
								a(href="/threads/" + thread._id)
									span #{thread.title}
									if thread.length > 1
										| [!{thread.length - 1}]
							if category.id == 0
								td
									a(href="/threads?c=" + thread.category.id) #{thread.category.name}
							td #{thread.writer}
							td !{thread.hit}
							td.d !{thread.udateStr}
					else
						tr
							td.t 표시할 내용이 없습니다.
							td


			table#threads-phone.threads.table.table-hover.visible-phone.col-lg-12
				tbody
					for thread in threads
						tr
							td
								a(href="/threads/" + thread._id)
									span #{thread.title}
									if thread.length > 1
										| [!{thread.length - 1}]
								div
									small #{thread.writer}
									small !{thread.hit}
									small.d !{thread.udateStr}
									if category.id === 0
										small
											a(href="/threads?c=" + thread.category.id) #{thread.category.name}
					else
						tr
							td.t 표시할 내용이 없습니다.
							td

			ul.pager(style='text-align: left; margin-left:0px;')
				if locals.prevUrl
					li
						a(href=prevUrl) Previous
				else
					li.disabled
						a(href='javascript:void(0)') Previous
				if locals.nextUrl
					li
						a(href=nextUrl) Next
				else
					li.disabled
						a(href='javascript:void(0)') Next
