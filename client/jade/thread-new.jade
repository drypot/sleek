extends layout

block title
	title New Post - #{siteTitle}

block content

	script
		init.add(function () {
			post.initNewForm();
		});

	.container
		.col-lg-12
			.page-header
				h2 New Post

			form#new-form(action="/api/threads", method="post", enctype="multipart/form-data")
				.form-row
					select.col-lg-4(name='cid')
						for c in user.categoriesOrdered
							option(value=c.id, selected=c.id==cid) #{c.name}
				.form-row
					label.control-label 필명
					input.input-with-feedback.col-lg-4(type='text', name='writer', value='', maxlength='32')
				.form-row
					label.control-label 제목
					input.input-with-feedback.col-lg-12(type='text', name='title', value='', maxlength='128')
				.form-row
					label.control-label 내용
					textarea.input-with-feedback(name='text', rows=10)
				.form-row.file-group.clearfix
					.files.col.col-lg-7
					.actions.col.col-lg-1
						button.btn.glyphicon.glyphicon-plus
				.form-action
					button.btn.btn-primary(name='send') Send
					button.btn.btn-default.disabled.hide(name='sending') Sending